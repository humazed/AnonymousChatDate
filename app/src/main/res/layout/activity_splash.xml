<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="humazed.github.com.anonymouschatanddate.SplashActivity">


    <RelativeLayout
        android:id="@+id/reBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_background">

        <ImageView
            android:id="@+id/imgBackgroundStar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/star"/>

        <com.hoanganhtuan95ptit.library.MeteorView
            android:id="@+id/imgMeteor0"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_margin="50dp"
            android:src="@drawable/icon_meteor"/>

        <com.hoanganhtuan95ptit.library.MeteorView
            android:id="@+id/imgMeteor1"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/icon_meteor"/>

        <com.hoanganhtuan95ptit.library.MeteorView
            android:id="@+id/imgMeteor2"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/icon_meteor"/>

        <com.hoanganhtuan95ptit.library.MeteorView
            android:id="@+id/imgMeteor3"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="300dp"
            android:src="@drawable/icon_meteor"/>

        <ImageView
            android:id="@+id/imgBackgroundTree"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/background_main_back"/>


        <ImageView
            android:id="@+id/imgBackgroundMoon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="100dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_light_moon"/>


        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/icon_tent_light"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_fire_halo"/>

        <ImageView
            android:id="@+id/imgBackgroundFire"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/fram_fire"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startChatButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/delius_unicase_bold"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textSize="40sp"
        android:textStyle="bold"/>


    <FrameLayout
        android:id="@+id/startChatButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/xml_background_login_facebook"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/startChatTextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/startChat"
            android:textColor="@color/colorWhile"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loadingView"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:visibility="invisible"
            app:indicatorName="BallTrianglePathIndicator"/>
    </FrameLayout>
</RelativeLayout>